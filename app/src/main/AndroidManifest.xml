<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studio.smartters.mowardsurvey">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".SurveyMainActivity"
            android:label="Survey Main" />
        <activity
            android:name=".SurveyItemActivity"
            android:label="Member Details" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BoothActivity" />
        <activity android:name=".ViewDataActivity" />
        <activity
            android:name=".PersonDataActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".SurveyItemNewActivity"
            android:label="@string/title_activity_survey_item_new"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>